
<% provide(:title,"Items: " + @item.name) %>
<div class="container">
  <div class="page-header">
  <h1><%= @item.name %></h1>
  </div>
  <div class="row">  
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
      <div class="overview">
        <h4>Overview</h4>
            <div class="square"> 
             <%= image_tag @item.image_url %>
             <br> 
            </div>
             <p> <%= @item.description %> </p>
             
      </div>
    </div>
    
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="stats">
           <h4>Stats</h4>
           <table class="table table-striped table-bordered" id="monsterstats">
                <tr>
                  <td> <span class="label label-gray">ID</span></td>
                  <td>  <%= @item.id %>   </td>
                </tr>
                <tr>
                  <td> <span class="label label-orange">Description</span></td>
                  <td>  <%= @item.description %>   </td>
                </tr>
                </table>
        </div>
    </div> 
      
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="drops">
          <h4>Monsters that drop this item</h4>
        </div>
        
    </div>
    
    
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="dungeons">
          <h4>Dungeon Locations</h4>
        </div>
    </div>
    
  
  </div>
  
</div> 