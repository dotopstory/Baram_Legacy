<% provide(:title,"Monsters: " + @monster.name) %>
<div class="container">
  <div class="page-header">
  <h1><%= @monster.name %></h1>
  </div>
  <div class="row">  
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
      <div class="overview">
        <h4>Overview</h4>
            <%= render @monster %> 
             
      </div>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="stats">
           <h4>Stats</h4>
           <table class="table table-striped table-bordered" id="monsterstats">
                <tr>
                  <td> <span class="label label-gray">ID</span></td>
                  <td>  <%= @monster.id %>   </td>
                </tr>
                <tr>
                  <td> <span class="label label-green">EXP</span></td>
                  <td>  <%= @monster.exp %>   </td>
                </tr>
                <tr>
                  <td> <span class="label label-red">HP</span></td>
                  <td>  <%= @monster.hp %>   </td>
                </tr>
                <tr>
                  <td> <span class="label label-blue">MP</span></td>
                  <td>  <%= @monster.mp %>   </td>
                </tr>
                <tr>
                  <td> <span class="label label-orange">Damage</span></td>
                  <td>  <%= @monster.attack_damage %>   </td>
                </tr>
                </table>
        </div>
    </div> 
  </div>
  
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="drops">
          <h4>Item Drops</h4>
            <% @monster.get_drop_items.each do |item| %>
               <%= render item %>
            <% end %>
        </div>
    </div>
  </div>
  
  <div class="row"> 
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="skills">
          <h4>Skills</h4>
        </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="dungeons">
          <h4>Dungeon Locations</h4>
        </div>
    </div>
  </div>
    
  
  
</div> 